<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/settings_image"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:textSize="20.0dip"
                android:textColor="#ff45cdef"
                android:layout_gravity="center"
                android:id="@id/user_name_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:textSize="20.0dip"
                android:textColor="#ff45cdef"
                android:layout_gravity="center"
                android:id="@id/locale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>

        <ToggleButton
            android:id="@id/music"
            android:background="@drawable/check"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_margin="2.0dip"
            android:checked="true"
            android:textOn=""
            android:textOff="" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/twitter_r"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:text="Purchase Now !!!"
            android:layout_weight="1.0"
            android:onClick="Purchase" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/purchase_lay"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#ff45cdef"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:text="Life Time"
                android:layout_weight="1.0" />

            <Button
                android:textSize="15.0dip"
                android:textColor="#ff45cdef"
                android:id="@id/life"
                android:background="@drawable/box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="Purchase"
                android:layout_weight="1.0" />

            <TextView
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#ff45cdef"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/price1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1.0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#ff45cdef"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:text="Safety Passes"
                android:layout_weight="1.0" />

            <Button
                android:textSize="15.0dip"
                android:textColor="#ff45cdef"
                android:id="@id/safety"
                android:background="@drawable/box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="Purchase"
                android:layout_weight="1.0" />

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star6" />

                <TextView
                    android:textSize="15.0dip"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="#ff45cdef"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/price2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#ff45cdef"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:text="Gotcha"
                android:layout_weight="1.0" />

            <Button
                android:textSize="15.0dip"
                android:textColor="#ff45cdef"
                android:id="@id/gocha_but"
                android:background="@drawable/box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="Purchase"
                android:layout_weight="1.0" />

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star6" />

                <TextView
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="#ff45cdef"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@id/price3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>